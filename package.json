{
  "name": "inua-solutions-crm", // Name of the project
  "version": "1.0.0", // Version of the project
  "description": "CRM for Inua Solutions", // Description of the project
  "main": "server.js", // Entry point of the application
  "scripts": {
    "start": "node server.js", // Script to start the application
    "dev": "nodemon server.js", // Script to start the application in development mode
    "structure": "node scripts/generateStructure.js" // Script to generate project structure
  },
  "dependencies": {
    "bcrypt": "^5.0.1", // Dependency for password hashing
    "cors": "^2.8.5", // Dependency for enabling CORS
